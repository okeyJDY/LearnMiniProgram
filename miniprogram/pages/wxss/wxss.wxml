<!--pages/wxss/wxss.wxml-->
<!-- 1.设置样式的三种方式 -->
<!-- 1.1.行内(内联)样式 -->
<view style="color: red; font-size: 32px">hahaha</view>

<!-- 1.2.页面样式 -->
<view class="box">hehehe</view>

<!-- 1.3.全局样式 -->
<view class="container">heiheihei</view>

<!-- 2.三种样式作用域一个组件 -->
<view style="background: red;" class="content container">我是组件</view>

<!-- 3.wxss中的单位: rpx -->
<!-- 前端也需要进行配置尺寸的适配: em/rem/vw/wh -->
<view class="box1"></view>
<view class="box2"></view>

<view class="content1">hahaha</view>
<view class="content2">hehehe</view>
